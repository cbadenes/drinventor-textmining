    <!-- Only W2V log traces -->
    <appender name="w2vFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/${bySecond}/w2v-${bySecond}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
